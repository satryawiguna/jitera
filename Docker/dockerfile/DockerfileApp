# Pull php 8 version with FPM by Alpine to support Laravel 9
FROM php:8.1.9-fpm

# Set working directory
WORKDIR /var/www/jitera.eu.org

# Install dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    libpng-dev \
    libjpeg62-turbo-dev \
    libfreetype6-dev \
    locales \
    libzip-dev \
    zip \
    jpegoptim optipng pngquant gifsicle \
    vim \
    unzip \
    git \
    curl \
    libonig-dev \
    libpq-dev \
    nodejs \
    npm

# Clear cache
RUN apt-get clean && rm -rf /var/lib/apt/lists/*

# Install extensions
RUN docker-php-ext-configure gd --with-jpeg=/usr/include/ --with-freetype=/usr/include/
RUN docker-php-ext-install pdo pdo_mysql mbstring zip exif pcntl bcmath gd
RUN pecl install -o -f redis &&  \
    rm -rf /tmp/pear &&  \
    docker-php-ext-enable redis

# Install composer
RUN curl -sS https://getcomposer.org/installer | php -- \
    --install-dir=/usr/bin --filename=composer

#RUN touch ~/.bashrc && chmod +x ~/.bashrc
#RUN curl -o- https://raw.githubusercontent.com/nvm-sh/nvm/v0.39.3/install.sh | bash
#RUN . ~/.nvm/nvm.sh && \
#    . ~/.bashrc && \
#    nvm install 18.12.0

# Add user for laravel application
RUN groupadd -g 1000 jitera
RUN useradd -u 1000 -ms /bin/bash -g jitera jitera

# Copy existing application directory contents
COPY . /var/www/jitera.eu.org

# Copy existing application directory permissions
COPY --chown=jitera:jitera . /var/www/jitera.eu.org

# Change current user to jitera
USER jitera

# Initialize vendor composer
RUN composer update

CMD ["npm", "install"]
CMD ["npm", "run", "build"]

# Initialize application
RUN php artisan key:generate && \
    php artisan optimize

# Expose port 9000 and start php-fpm server
EXPOSE 9000
CMD ["php-fpm"]
